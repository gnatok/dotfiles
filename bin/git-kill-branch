#!/usr/bin/env bash

# Deletes local and remote branch
# Usage: git-kill-branch branch_name

if [ $# -eq 0 ]; then
  echo "Usage: git-kill-branch branch_name"
  exit 1
fi

if [ "$1" == "master" -o "$1" == "staging" -o "$1" == "production" ]; then
  echo "Impossible to kill $1!"
  exit 1
fi

git branch -D $1
git push origin :$1